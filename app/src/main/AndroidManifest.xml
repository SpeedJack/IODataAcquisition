<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.unipi.dii.iodataacquisition">

    <!-- Permission needed in order to get the information about WiFi AccessPoint   -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <!-- Permission needed in order to get the information about the Bluetooth devices   -->
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
                        <!-- Android Version >= 10   -->
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IODataAcquisition">
        <activity android:name="it.unipi.dii.iodataacquisition.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name="it.unipi.dii.iodataacquisition.LightMonitoringService" />
        <service android:name="it.unipi.dii.iodataacquisition.WiFiBltMonitoringService" />
        <service android:name="it.unipi.dii.iodataacquisition.ProximityMonitoringService" />
    </application>

</manifest>